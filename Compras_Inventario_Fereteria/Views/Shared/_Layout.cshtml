<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/mystyles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/autofill/2.3.6/css/autoFill.dataTables.min.css" />

    <script src="https://kit.fontawesome.com/4aecce847f.js" crossorigin="anonymous"></script>
</head>

@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/css")
@Styles.Render("~/Content/jquery-ui.css")
<body>
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
        @Html.ActionLink("Inicio", "Index", "Home")
        @Html.ActionLink("Acerca de", "About", "Home")
        @Html.ActionLink("Contacto", "Contact", "Home")
        @Html.ActionLink("Cerrar Sesion", "Logoff", "Cerrar")
        <br />
        @Html.ActionLink("Gestion de Usuarios", "Index", "usuarios")
        <br>
        <br>
        <br>
        <button class="dropdown-btn">
            <i class="fas fa-database"></i>
            Productos
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            @Html.ActionLink("Gestionar Productos", "Index", "productos")
        </div>

        <button class="dropdown-btn">
            <i class="fas fa-truck"></i>
            Proveedores
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            @Html.ActionLink("Gestionar Proveedores", "Index", "proveedors")
        </div>

        <button class="dropdown-btn">
            <i class="fas fa-address-card"></i>
            Empleados
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            @Html.ActionLink("Gestionar Empleados", "Index", "empleados")
        </div>
        <button class="dropdown-btn">
            <i class="fas fa-cart-arrow-down"></i>
            Compras
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            @Html.ActionLink("Gestionar Compras", "Index", "compras")
        </div>
        <button class="dropdown-btn">
            <i class="fas fa-list-alt"></i>
            Categorias
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            @Html.ActionLink("Gestionar Categorias", "Index", "categorias")
        </div>
    </div>


    <div id="main">
        <span class="openbtn" onclick="openNav()">☰ Menu</span>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>


    <script src="~/Scripts/myscripts.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @Scripts.Render("~/Scripts/DatePickerReady.js")


</body>
</html>
