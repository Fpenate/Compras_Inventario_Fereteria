<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/4aecce847f.js" crossorigin="anonymous"></script>
    <title>@ViewBag.Title - Compras de Inventario de Ferreteria</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/datatablescss")
</head>
<body>

    <div class="container body-content">
        @Html.Partial("~/Views/Shared/_Flash.cshtml")
        @RenderBody()
        <hr />
        <footer>
            <p>Contacto : Ferretero@mail.com</p>
            <p>&copy; @DateTime.Now.Year -Compras de  Inventario de fereteria UML proyect UTEC </p>
          
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/datatablesjs")
</body>
</html>
