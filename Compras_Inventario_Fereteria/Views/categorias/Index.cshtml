@model IEnumerable<Compras_Inventario_Fereteria.Models.categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="jumbotron">
        <h1>Categorias de Productos <i class="fas fa-sitemap"></i></h1>
    </div>
</div>
<p>
    <button class="btn btn-success btn-lg " onclick="location.href='@Url.Action("Create")';return false;">Crear Nuevo <i class="fas fa-plus-square size:300x"></i></button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tipo_categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tipo_categoria)
        </td>
        <td>
            <button class="btn btn-info" onclick="location.href='@Url.Action("Edit",new { id = item.id_categoria })';return false;">Editar <i class="fas fa-edit"></i></button>
            <button class="btn btn-default" onclick="location.href='@Url.Action("Details", new { id = item.id_categoria })';return false;">Detalles <i class="fas fa-info-circle"></i></button>
            <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = item.id_categoria })';return false;">Borrar <i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
}

</table>
<button class="btn btn-default btn-lg" onclick="location.href='@Url.Action("Index","Home")';return false;">Inicio <i class="fas fa-home"></i></button>